<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.CalendarActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:contentInsetStart="0dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10"
                android:src="@drawable/nav_back_white_24dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="万年历"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/before"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_120"
                    android:src="@drawable/ic_the_day_before" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/size_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lunar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_10"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/size_30"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lunarYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/size_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/after"
                    android:layout_width="@dimen/size_60"
                    android:layout_height="@dimen/size_120"
                    android:src="@drawable/ic_the_day_after" />
            </LinearLayout>

            <TextView
                android:id="@+id/suit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_suit"
                android:drawablePadding="@dimen/size_15"
                android:padding="@dimen/size_15"
                android:textColor="@color/green"
                android:textSize="@dimen/size_14" />

            <TextView
                android:id="@+id/avoid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_avoid"
                android:drawablePadding="@dimen/size_15"
                android:padding="@dimen/size_15"
                android:textColor="@color/red"
                android:textSize="@dimen/size_14" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>